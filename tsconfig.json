{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "isolatedModules": true,
        "allowJs": true,
        "strict": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "types": [
            "vite/client"
        ],
        "paths": {
            "@/*": [
                "resources/js"
            ]
        },
        "lib": [
            "esnext",
            "dom"
        ],
        "include": [
            "resources/js/**/*.ts",
            "resources/js/**/*.tsx",
            "resources/js/**/*.vue",
        ],
        "exclude": [
            "public/**/*",
            "node_modules",
            "vendor"
        ],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    }
}
